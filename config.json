{
  "CXX": "clang++",
  "CC": "clang",
  "CCIGNORE": "",
  "CXXIGNORE": "",
  "CCFLAGS": ["-fPIC -Wall -Wpedantic --static"],
  "CXXFLAGS": ["-std=c++17", "-fPIC", "-Wall", "-Wpedantic", "--static", "-O3"],
  "LINK": "-lz",
  "source": "src",
  "include_dir": "include",
  "include": ["-I$(ROOT)/$(BUILD)/libpng/include"],
  "build": "build",
  "trigon": {
    "path": "$(ROOT)/trigon",
    "files": "{{source}}/*.cpp",
    "type": "exe",
    "dep": ["libpng.a"],
    "group": "main"
  },
  "libpng.a": {
    "path": "$(ROOT)/{{build}}/libpng.a",
    "source": "libpng",
    "type": "aumake"
  }
}
